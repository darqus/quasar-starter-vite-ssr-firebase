{
  "$schema": "https://json.schemastore.org/prettierrc",
  "semi": false,
  "bracketSpacing": true,
  "trailingComma": "es5",
  "vueIndentScriptAndStyle": false,
  "endOfLine": "auto",
  "useTabs": false,
  "tabWidth": 2,
  "singleAttributePerLine": true,
  "singleQuote": true,
  "bracketSameLine": false,
  "printWidth": 80,
  "arrowParens": "always",
  "htmlWhitespaceSensitivity": "ignore",
  "overrides": [
    {
      "files": "*.scss",
      "options": {
        "singleQuote": false
      }
    },
    {
      "files": "*.vue",
      "options": {
        "vueIndentScriptAndStyle": false,
        "singleAttributePerLine": true,
        "htmlWhitespaceSensitivity": "ignore"
      }
    }
  ]
}
