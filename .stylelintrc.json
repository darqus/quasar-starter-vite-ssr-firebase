{
  "extends": [
    "stylelint-config-html",
    "stylelint-config-recommended-scss",
    "stylelint-config-recommended-vue/scss",
    "stylelint-config-recess-order",
    "stylelint-config-standard"
  ],
  "overrides": [
    {
      "files": [
        "src/*.vue",
        "src/**/*.vue",
        "src/*.scss",
        "src/**/*.scss"
      ]
    }
  ],
  "rules": {
    "alpha-value-notation": "number",
    "annotation-no-unknown": [
      true,
      {
        "ignoreAnnotations": [
          "default"
        ]
      }
    ],
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "include",
          "mixin",
          "if",
          "else",
          "each",
          "error",
          "function",
          "return",
          "warn"
        ]
      }
    ],
    "import-notation": "string",
    "max-nesting-depth": [
      7,
      {
        "ignore": [
          "pseudo-classes",
          "blockless-at-rules"
        ],
        "ignoreAtRules": [
          "media"
        ]
      }
    ],
    "selector-class-pattern": "",
    "selector-max-type": [
      0,
      {
        "ignore": [
          "child",
          "descendant",
          "compounded"
        ]
      }
    ],
    "selector-max-universal": 1,
    "selector-pseudo-class-no-unknown": [
      true,
      {
        "ignorePseudoClasses": [
          "global",
          "export",
          "import",
          "local"
        ]
      }
    ],
    "unit-allowed-list": [
      "em",
      "rem",
      "ms",
      "s",
      "%",
      "px",
      "fr",
      "vw",
      "vh",
      "deg"
    ]
  }
}
